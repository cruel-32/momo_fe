Subject: [PATCH] mixin vw convert

---
 src/styles/import/_mixin.scss | 33 +++++++++++++++++++++++++++++++++
 1 file changed, 33 insertions(+)

diff --git a/src/styles/import/_mixin.scss b/src/styles/import/_mixin.scss
index ab77a41..6edf731 100644
--- a/src/styles/import/_mixin.scss
+++ b/src/styles/import/_mixin.scss
@@ -8,4 +8,37 @@
     @media screen and (min-width: getSize($size)) {
         @content;
     }
+}
+
+@mixin vw-convert($prop, $pixel) {
+    @if type-of($pixel) == number {
+        #{$prop}: $pixel*100/720*1vw;
+    }
+    @else if type-of($pixel) == string {
+        #{$prop}: auto;
+    }
+    @else if type-of($pixel) == list {
+        $px: ();
+        $vw: ();
+        @each $val in $pixel {
+            @if type-of($val) == number {
+                $vw: append($vw, $val*100/720*1vw);
+            }
+            @else if type-of($val) == string {
+                $vw: append($vw, auto);
+            }
+        }
+        #{$prop}:$vw;
+
+        $vw: ();
+
+        @each $val in $pixel {
+            @if type-of($val) == number {
+                $vw: append($vw, $val*100/360*1vw);
+            }
+            @else if type-of($val) == string {
+                $vw: append($vw, auto);
+            }
+        }
+    }
 }
